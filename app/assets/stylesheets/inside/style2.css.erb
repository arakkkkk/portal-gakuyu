@charset "UTF-8";

/*基本色*/
:root{
	--main-color:#5D9AB2;
	--accent-color:#BF6A7A;
	--dark-main-color:#2B5566;

	--large-width: 1200px;
}

/*基本設定：ページ全体*/
body{
	font-family: 'ヒラギノ角ゴ StdN',
	/*'Hiragino Kaku Gothic Pro',*/
	sans-serif;
}

/*ヘッダーA：　サイト名*/
.headA{
	display: inline-block;
	line-height: 70px;
	padding-left: 20px;
	padding-right: 20px;
	background-color: #fff;
	color: #33CCFF;
	font-family: 'Montserrat', sans-serif;
	font-size: 40px;
	text-decoration: none;
}

.headB ul{
	margin: 0;
	padding: 0;
	list-style: none;
}

.headB a{
	display: block;
	padding: 15px;
	color: #666666;
	font-size: 17px;
	text-decoration: none;
}


@media(min-width: 768px){
	header .row{
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: var(--large-width);
		margin-left: auto;
		margin-right: auto;
	}
	.headB ul{
		display:flex;
	}
}



/*ConA*/
