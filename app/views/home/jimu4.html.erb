<!DOCTYPE html>
<html dir="ltr" lang="ja">
<!-- ============================ヘッダー================================ -->
<%= render 'layouts/head_jimu' %>


<!-- ============================メインナビゲーション================================ -->
<nav id="mainNav">
	<div class="inner">
  	<a class="menu" id="menu"><span>MENU</span></a>
		<div class="panel">   
    	<ul>
    		<li><a href="/jimu"><strong>備品チェック</strong><span>check</span></a></li>
			<li><a href="/jimu2"><strong>備品の追加</strong><span>correction</span></a></li>
			<li><a href="/jimu3"><strong>備品の変更</strong><span>correction</span></a></li>
			<li class="active"><a><strong>共有は命</strong><span>share</span></a></li>
			<li><a href="/jimu6"><strong>要望書</strong><span>special</span></a></li>
		</ul>   
    </div>
	</div> 
</nav>
<!-- / ==========================メインナビゲーション=============================== -->


<!-- =============================コンテンツ=====================================- -->
<div id="wrapper" class="create">
	<section id="main">
    <section class="content">
    	<h3 class="heading">学友会事務局　共有は命</h3>
     	<article>
     		<div class="btn">
     		<a href="/jimu5" class="btn-flat-border">---------共有する--------</a>
     		</div>

     		<div class="cate"><p>未解決</p></div>
     		<% @kyoyuhainotis.each do |kyoyuhainoti| %>
     		<div class="share_info">
     			<div class="width_150">
	     		<a>共有者：</a>
	        	<a><%= kyoyuhainoti.name %></a>
	        	</div>
	        </div>
	        <div class="share_info">
	        	<div class="width_400">
	        	<a>タイトル：</a>
	        	<a><%= kyoyuhainoti.title %></a>
	        	</div>
	        </div>
	        <div class="share_info">
	        	<div class="width_150">
	        	<a>共有日：</a>
	        	<a><%= kyoyuhainoti.created_at.strftime('%Y/%m/%d') %></a>
	        	</div>
	        </div>
	        <div class="share_text">
	        	<a><%= simple_format(kyoyuhainoti.text) %></a>
	        </div>
	        <div class="btn2">
	        <tr>
	        <td><%= link_to '解決済に移動', jimu4_edit_path(kyoyuhainoti) %>
		    </tr>
			</div>
        	<br>
    		<% end %>



     		<div class="cate"><p>解決済</p></div>  			
     		<% @resolution.each do |kyoyuhainoti| %>
     		<div class="share_info">
     			<div class="width_150">
	     		<a>共有者：</a>
	        	<a><%= kyoyuhainoti.name %></a>
	        	</div>
	        </div>
	        <div class="share_info">
	        	<div class="width_400">
	        	<a>タイトル：</a>
	        	<a><%= kyoyuhainoti.title %></a>
	        	</div>
	        </div>
	        <div class="share_info">
	        	<div class="width_150">
	        	<a>共有日：</a>
	        	<a><%= kyoyuhainoti.created_at %></a>
	        	</div>
	        </div>
	        <div class="share_text">
	        	<a><%= simple_format(kyoyuhainoti.text) %></a>
	        </div>
	        <tr>
	        <td><%= link_to '消去する', kyoyuhainoti, :method => :delete, data: { confirm: 'Are you sure?' } %></td>
		    </tr>
        	<br>
    		<% end %>







    	</article>
    </section>
</div>


<!-- / ============================コンテンツ============================ -->




























