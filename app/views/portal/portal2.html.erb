<%= render 'layouts/head_portal' %>
  <!-- ↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓main content↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑ -->
        <div class="container" id="container">
          <div class="row">
            <div class="col-xl-12 col-lg-12">
              <div class="card shadow mb-4">
                <div class="card-body">
                  <div class="mx-3">
                        <% if @content.parent == "clubmessage" %>
                          分類：
                          <form id="target">
                            <br><input type="radio" name="check" value="none" id="none"> なし
                            <br><input type="radio" name="check" value="imp" id="imp"> 【重要】
                            <br><input type="radio" name="check" value="ask" id="ask"> 【要回答】
                            <br><input type="radio" name="check" value="tt" id="tt"> 【体育会】
                            <br><input type="radio" name="check" value="gg" id="gg"> 【文芸局】
                            <br><input type="radio" name="check" value="bb" id="bb"> 【学術局】
                          </form>
                        <% end %>
                        <p></p>
                        <% if params[:format] != "100" %>
                          タイトル：<br>
                          <input type="text" id="title">
                        <% end %>
                        <br><br><br>
                        テキスト:
                        <!-- quill.js docment library ここから-->
                        <div class="docarea mt-4">
                          <div id="editor"></div>
                          </div>
                        <!-- quill.js docment library ここまで-->
                        <div class="row mx-1 mt-4">
                          <button class="setbutton" onclick="getcontent()">submit</button>
                        </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>



    <!-- ↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑main content↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑ -->
</div>
</div>
</body>





