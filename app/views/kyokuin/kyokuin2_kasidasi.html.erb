<!DOCTYPE html>
<html dir="ltr" lang="ja">
<!-- ============================ヘッダー================================ -->
<%= render 'layouts/head_kyokuin' %>


<!-- =============================コンテンツ=====================================- -->
<div id="wrapper">
	<section id="main">
    <section class="content">
    	<h3 class="heading">学友会事務局　備品チェック</h3>
     	<article>

     		<div class="btn">
     		<a href="/kyokuin2" class="btn-flat-border">---------貸出中備品一覧--------</a>
     		</div>

	        	<div class="col_rental">
	        	返却：<a><%= @rentalequip.return_at.try(:strftime,'%m/%d-%H:%M') %></a>
	        </div>
	        <div class="col_rental"><div class="width_50">
	        	数：<a><%= @rentalequip.r_num %></a>
	        </div></div>
	        <div class="col_rental"><div class="width_200">
	        	団体名：<a><%= @rentalequip.g_name %></a>
	        </div></div>
	        <div class="col_rental"><div class="width_200">
	        	責任者名：<a><%= @rentalequip.r_name %></a>
	        </div></div>
	        <div class="col_rental"><div class="width_200">
	        	TELL：<a><%= @rentalequip.tell %></a>
	        </div></div>
	        <div class="col_name">
	        	<a class="aaa">備品：<%= @rentalequip.name %></a>
	        </div>
	        <br>

		    <%= form_with(model: @rentalequip,:url => {:action => :kyokuin2_update}, local: true) do |form| %>
		    	<p>
		            <%= form.label :kasidasi, "名前：" %><br>
		            <%= form.text_field :kasidasi %>
		        </p>

		        <%= form.submit "貸し出しを許可する" %>
		    <% end %>

     	


    	</article>
    </section>
</div>
<!-- / ============================コンテンツ============================ -->




























<!-- フッター -->
<footer id="footer">
	<%= render 'layouts/footer' %>
</footer>
	<!-- / フッター -->
