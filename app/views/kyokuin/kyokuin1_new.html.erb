<!DOCTYPE html>
<html dir="ltr" lang="ja">
<!-- ============================ヘッダー================================ -->
<%= render 'layouts/head_kyokuin' %>

<!-- =============================コンテンツ=====================================- -->
<div id="wrapper" class="create">
	<section id="main">
    <section class="content">
    	<h3 class="heading">引き継ぎノート</h3>
     	<article>
     		<div class="btn">
		    	<a href="/kyokuin1" class="btn-flat-border">--前のページに戻る--</a>
			</div>
		    <%= form_with(model: @hikitugi, local: true) do |form| %>
		    	<p>
		            <%= form.label :name, "共有者名：" %><br>
		            <%= form.text_field :name %>
		        </p>
		        <p>
		            <%= form.label :title, "タイトル：" %><br>
		            <%= form.text_field :title %>
		        </p>
		        <div class="textarea">
		        <p>
		            <%= form.label :text, "共有：" %><br>
		            <%= form.text_area :text, :size=> "90x10" %>
		        </p>
		    	</div>
		        <%= form.submit "共有" %>
		    <% end %>
    	</article>
    </section>
</div>
<!-- / ============================コンテンツ============================ -->





























