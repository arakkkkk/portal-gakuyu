		    <%= form_with(model: @rentalequip,:url => {:action => :soudaisai_update}, local: true) do |form| %>
		    	<p>
		            <%= form.label :r_num, "数：" %><br>
		            <%= form.text_field :r_num %>
		        </p>
		        <p>
		            <%= form.label :rental_at, "貸出時間：" %><br>
